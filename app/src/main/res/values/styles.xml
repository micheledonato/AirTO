<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for settings preference theme -->
        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>-->
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.AirTO.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="AppTheme.AirTO" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.AirTO.NoTitle</item>
    </style>

</resources>
